{
  "name": "gitlab-helper",
  "displayName": "gitlab-helper",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitlab-helper.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "gitlab-helper.login",
        "title": "GitLab: 登录"
      },
      {
        "command": "gitlab-helper.logout",
        "title": "GitLab: 登出"
      },
      {
        "command": "gitlab-helper.viewMenu.settings",
        "title": "设置",
        "icon": "$(gear)"
      },
      {
        "command": "gitlab-helper.viewMenu.logout",
        "title": "退出登录"
      },
      {
        "command": "gitlab-helper.refreshMRs",
        "title": "GitLab: 刷新 Merge Requests",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gitlab-helper",
          "title": "GitLab Helper",
          "icon": "resources/gitlab.svg"
        }
      ]
    },
    "views": {
      "gitlab-helper": [
        {
          "type": "webview",
          "id": "gitlabHelperWelcome",
          "name": "GitLab"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "gitlab-helper.viewMenu.settings",
          "when": "view == gitlabHelperWelcome",
          "group": "navigation"
        },
        {
          "command": "gitlab-helper.refreshMRs",
          "when": "view == gitlabHelperWelcome",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "gitlab-helper.viewMenu.logout",
          "when": "view == gitlabHelperWelcome",
          "group": "inline"
        }
      ],
      "commandPalette": [
        {
          "command": "gitlab-helper.viewMenu.logout",
          "when": "false"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "esbuild": "^0.25.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
